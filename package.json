{
  "name": "whatsapp-desktop",
  "productName": "WhatsApp",
  "version": "1.0.0",
  "description": "WhatsApp desktop for linux",
  "productDescription": "web.whatsapp.com wrapped in electron packaged for Linux (debian)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clear-build": "rimraf dist/ release-builds/",
    "package-linux": "electron-packager . whatsapp-desktop --overwrite --asar --platform=linux --arch=x64 --icon=./src/images/logo.png --prune=true --out=release-builds",
    "create-debian-installer": "electron-installer-debian --src release-builds/whatsapp-desktop-linux-x64/ --arch amd64 --config debian-config.json",
    "deb-pack-install": "npm run clear-build && npm run package-linux && npm run create-debian-installer",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anujdatar/whatsapp-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/anujdatar/whatsapp-desktop/issues"
  },
  "homepage": "https://github.com/anujdatar/whatsapp-desktop#readme",
  "keywords": [
    "WhatsApp",
    "Messenger",
    "Electron",
    "desktop"
  ],
  "author": {
    "name": "Anuj Datar",
    "email": "anuj.datar@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.1.4",
    "electron-installer-debian": "^1.1.1",
    "electron-packager": "^13.1.1",
    "rimraf": "^2.6.3"
  },
  "dependencies": {
    "electron-store": "^3.1.0"
  }
}
